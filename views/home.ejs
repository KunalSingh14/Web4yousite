<%- include("partials/header") -%>

<% posts.forEach(function(post){ %>
<script type="text/javascript">
  var c = 0;//we will insert the value of c(count) in our database and call it here
</script>

<div>
    <div class="container-fluid card">
        <h1><%= post.title %></h1>
        
        <div class="row">
          <div class="col">
            <img src="<%= `${post.imageUrl}`  %>" class=" img-thumbnail " alt="Blog Image" >
          </div>
          <div class="col">
            <p><%= post.content.substring(0,100) + "..." %></p>
            <p><%= post._id %></p>
            
            <button class="visit">View Blog</button>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <button class="like" onclick="like()">
              like
              <!-- <i class="fa fa-heart" aria-hidden="true"></i> -->
          
            </button>
            <form action="/delCnf" method="post">
              <div class="form-group">
                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= post._id %>">
              </div>
            </form>
            
            <div class="like_count">
              Total number of likes--
              <span> 0 </span>
              <script>
              $(document).ready(function(){
                $(".like").click(function(){
                    c=c+1;
                     console.log(c);
                     $(".like_count span").html(c)
                     
                      });
                         });
                //document.write(c)
                
               </script>
                  
            </div>
            
          </div>
        </div>
      </div>
</div>
<% }) ;%>



<%- include("partials/footer") -%>
